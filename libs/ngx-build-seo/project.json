{
  "name": "ngx-build-seo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ngx-build-seo/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["service", "publishable"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ngx-build-seo/jest.config.ts",
        "tsConfig": "libs/ngx-build-seo/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/libs/ngx-build-seo"],
      "options": {
        "project": "libs/ngx-build-seo/ng-package.json"
      },
      "defaultConfiguration": "production"
    },
    "publish-npm": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}/dist/libs/ngx-build-seo",
        "commands": [
          "echo 'Publishing to npm registry...'",
          "npm publish --registry=https://registry.npmjs.org --access=public"
        ],
        "env": {
          "NPM_CONFIG_@lpcuong2106:registry": "https://npm.pkg.github.com/",
          "NPM_CONFIG_//npm.pkg.github.com/:_authToken": "${GITHUB_TOKEN}"
        },
        "parallel": false
      },
      "dependsOn": ["build"]
    },
    "publish-github": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}/dist/libs/ngx-build-seo",
        "commands": [
          "echo 'Publishing to GitHub registry...'",
          "npm publish --registry=https://npm.pkg.github.com --access=public"
        ],
        "parallel": false
      },
      "dependsOn": ["build"]
    }
  }
}
